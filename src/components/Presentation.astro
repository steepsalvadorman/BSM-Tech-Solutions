---
import "../styles/global.css";
import presentacion from "../assets/propiedad-intelectual-software.jpg";

const textos = [
  { title: "Soluciones Innovadoras en Desarrollo de Software" },
  { txtSubtitle: "Transformamos tus ideas en aplicaciones digitales a medida" },
  { txtBoton: "HABLEMOS", href: "/hablemos" },
];
---

<section class="relative min-h-[45vh] overflow-hidden bg-black">
  <!-- Imagen de fondo -->
  <img
    src={presentacion.src}
    alt="PresentaciÃ³n de la empresa"
    class="absolute inset-0 h-full w-full object-cover"
    loading="eager"
  />

  <!-- Overlay oscuro con degradado -->
  <div class="absolute inset-0 bg-gradient-to-br from-slate-950/90 via-slate-900/80 to-black/70"></div>

  <!-- Glow sutil -->
  <div class="absolute inset-0">
    <div class="absolute top-1/2 left-1/2 h-[32rem] w-[32rem] -translate-x-1/2 -translate-y-1/2 rounded-full bg-cyan-400/10 blur-[140px]"></div>
  </div>

  <!-- Contenido -->
  <div class="relative z-10 mx-auto flex max-w-7xl flex-col items-center justify-center px-4 py-24 text-center">
    <h1 class="mb-6 max-w-4xl text-4xl font-extrabold tracking-tight text-white md:text-5xl lg:text-6xl">
      {textos[0].title}
    </h1>

    <p class="mb-12 max-w-2xl text-lg font-medium text-slate-300 md:text-xl">
      {textos[1].txtSubtitle}
    </p>

    <a
      href={textos[2].href}
      class="rounded-xl bg-gradient-to-r from-cyan-500 to-blue-600 px-8 py-3 text-sm font-semibold text-white shadow-lg shadow-cyan-500/30 transition-all hover:shadow-cyan-500/50 active:scale-95"
    >
      {textos[2].txtBoton}
    </a>
  </div>
</section>