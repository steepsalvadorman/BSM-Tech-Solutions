---
import "../styles/global.css";





const servicios = [
  "Desarrollo Web",
  "Aplicaciones Móviles",
  "Software a Medida",
  "Consultoría Técnica",
  "Otro",
];
---

<section class="relative overflow-hidden bg-linear-to-br from-slate-950 via-slate-900 to-black py-24">
  <!-- Glow decorativo -->
  <div class="absolute inset-0 -z-10">
    <div class="absolute top-[-10%] left-1/2 h-120 w-120 -translate-x-1/2 rounded-full bg-cyan-400/10 blur-[140px]"></div>
  </div>

  <div class="mx-auto max-w-7xl px-6 lg:px-8">

    <!-- Header -->
    <header class="mx-auto mb-16 max-w-2xl text-center">
      <h2 class="text-sm font-semibold uppercase tracking-widest text-cyan-400">
        Contacto
      </h2>
      <p class="mt-3 text-4xl font-bold tracking-tight text-white sm:text-5xl">
        Hablemos de tu proyecto
      </p>
      <p class="mt-6 text-lg text-slate-400">
        Cuéntanos qué necesitas y te responderemos con una propuesta clara y realista.
      </p>
    </header>

    <!-- Form -->
    <form
      method="POST"
      action="#"
      class="mx-auto max-w-3xl rounded-3xl bg-slate-900/70 p-8 backdrop-blur-xl ring-1 ring-white/10 md:p-12"
    >
      <div class="grid grid-cols-1 gap-6 sm:grid-cols-2">

        <!-- Nombre -->
        <div>
          <label class="block text-sm font-medium text-slate-300">
            Nombre completo
          </label>
          <input
            type="text"
            name="name"
            required
            placeholder="Juan Pérez"
            class="mt-2 w-full rounded-xl bg-slate-950 px-4 py-3 text-white placeholder:text-slate-500 ring-1 ring-white/10 focus:ring-2 focus:ring-cyan-400 focus:outline-none"
          />
        </div>

        <!-- Email -->
        <div>
          <label class="block text-sm font-medium text-slate-300">
            Correo electrónico
          </label>
          <input
            type="email"
            name="email"
            required
            placeholder="juan@empresa.com"
            class="mt-2 w-full rounded-xl bg-slate-950 px-4 py-3 text-white placeholder:text-slate-500 ring-1 ring-white/10 focus:ring-2 focus:ring-cyan-400 focus:outline-none"
          />
        </div>

        <!-- Empresa -->
        <div>
          <label class="block text-sm font-medium text-slate-300">
            Empresa (opcional)
          </label>
          <input
            type="text"
            name="company"
            placeholder="Nombre de la empresa"
            class="mt-2 w-full rounded-xl bg-slate-950 px-4 py-3 text-white placeholder:text-slate-500 ring-1 ring-white/10 focus:ring-2 focus:ring-cyan-400 focus:outline-none"
          />
        </div>

        <!-- Servicio -->
        <div>
          <label class="block text-sm font-medium text-slate-300">
            Servicio de interés
          </label>
          <select
            name="service"
            required
            class="mt-2 w-full rounded-xl bg-slate-950 px-4 py-3 text-white ring-1 ring-white/10 focus:ring-2 focus:ring-cyan-400 focus:outline-none"
          >
            <option value="" disabled selected>
              Selecciona un servicio
            </option>
            {servicios.map((s) => (
              <option value={s}>{s}</option>
            ))}
          </select>
        </div>

        <!-- Mensaje -->
        <div class="sm:col-span-2">
          <label class="block text-sm font-medium text-slate-300">
            Cuéntanos sobre tu proyecto
          </label>
          <textarea
            name="message"
            rows="5"
            required
            placeholder="Objetivo, alcance, tiempos estimados, etc."
            class="mt-2 w-full resize-none rounded-xl bg-slate-950 px-4 py-3 text-white placeholder:text-slate-500 ring-1 ring-white/10 focus:ring-2 focus:ring-cyan-400 focus:outline-none"
          ></textarea>
        </div>
      </div>

      <!-- CTA -->
      <div class="mt-10 flex justify-center">
        <button
          type="submit"
          class="rounded-xl bg-linear-to-r from-cyan-500 to-blue-600 px-10 py-3 text-sm font-semibold text-white shadow-lg shadow-cyan-500/30 transition-all hover:shadow-cyan-500/50 active:scale-95"
        >
          Enviar consulta
        </button>
      </div>
    </form>
  </div>
</section>