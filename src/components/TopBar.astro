---
import "../styles/global.css";

const links = [
  { name: "Inicio", href: "/" },
  { name: "Servicios", href: "#our-services" },
  { name: "Contacto", href: "#contacto" },
];
---

<nav class="sticky top-0 z-50 w-full border-b border-white/10 bg-linear-to-r from-slate-950 via-slate-900 to-black backdrop-blur">
  <div class="mx-auto flex max-w-7xl items-center justify-between px-6 py-4">

    <!-- Logo -->
    <a href="/" class="text-2xl font-extrabold tracking-tight text-white">
      Dai
      <span class="bg-linear-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">
        Dev
      </span>
    </a>

    <!-- Links desktop -->
    <ul class="hidden items-center gap-8 md:flex">
      {links.map((link) => (
        <li>
          <a
            href={link.href}
            class="relative text-base font-medium text-slate-300 transition-colors hover:text-white"
          >
            {link.name}
            <span class="absolute -bottom-1 left-0 h-0.5 w-0 bg-cyan-400 transition-all duration-300 hover:w-full"></span>
          </a>
        </li>
      ))}
    </ul>

    <!-- Botón hamburguesa (mobile) -->
    <button
      id="menu-btn"
      class="md:hidden flex flex-col gap-1.5"
      aria-label="Abrir menú"
    >
      <span class="h-0.5 w-6 bg-white"></span>
      <span class="h-0.5 w-6 bg-white"></span>
      <span class="h-0.5 w-6 bg-white"></span>
    </button>
  </div>

  <!-- Menú mobile -->
  <div
    id="mobile-menu"
    class="hidden md:hidden border-t border-white/10 bg-slate-950/95 backdrop-blur"
  >
    <ul class="flex flex-col gap-4 px-6 py-6">
      {links.map((link) => (
        <li>
          <a
            href={link.href}
            class="block text-base font-medium text-slate-300 transition hover:text-white"
          >
            {link.name}
          </a>
        </li>
      ))}
    </ul>
  </div>
</nav>

<script>
  const btn = document.getElementById("menu-btn");
  const menu = document.getElementById("mobile-menu");

  btn?.addEventListener("click", () => {
    menu?.classList.toggle("hidden");
  });
</script>