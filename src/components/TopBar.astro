---
import "../styles/global.css";
const links = [
  { name: "Inicio", href: "/" },
  { name: "Servicios", href: "/servicios" },
  { name: "Nosotros", href: "/nosotros" },
  { name: "Proyectos", href: "/proyectos" },
  { name: "Contacto", href: "/contacto" },
];
---

<nav class="sticky top-0 z-50 w-full border-b border-white/10 bg-linear-to-r from-slate-950 via-slate-900 to-black backdrop-blur">
  <div class="mx-auto flex max-w-7xl items-center justify-between px-6 py-4">

    <!-- Logo -->
    <a
      href="/"
      class="text-2xl font-extrabold tracking-tight text-white"
    >
      BSM
      <span class="bg-linear-to-r from-cyan-400 to-blue-500 bg-clip-text text-transparent">
        TechSolutions
      </span>
    </a>

    <!-- Links -->
    <ul class="hidden items-center gap-8 md:flex">
      {links.map((link) => (
        <li>
          <a
            href={link.href}
            class="relative text-base font-medium text-slate-300 transition-colors hover:text-white"
          >
            {link.name}
            <span class="absolute -bottom-1 left-0 h-0.5 w-0 bg-cyan-400 transition-all duration-300 hover:w-full"></span>
          </a>
        </li>
      ))}
    </ul>

    <!-- CTA -->
    <div class="flex items-center gap-4">
      <a
        href="/contacto"
        class="hidden rounded-xl bg-linear-to-r from-cyan-500 to-blue-600 px-6 py-2.5 text-sm font-semibold text-white shadow-lg shadow-cyan-500/20 transition-all hover:shadow-cyan-500/40 active:scale-95 md:inline-block"
      >
        Ingresar
      </a>
    </div>

  </div>
</nav>